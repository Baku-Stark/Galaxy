

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    
    Label:
        text: root.parent.menu_title
        font_size: dp(60)
        font_name: 'assets/fonts/Sackers-Gothic-Std-Light.ttf'
        pos_hint: { "center_x": .5, "center_y": .6 }

    Label:
        # label de pontos do usu√°rio [TELA DE GAME OVER]
        text: root.parent.points_game
        font_size: dp(25)
        pos_hint: { "center_x": .5, "center_y": .45 }
        
    Button:
        text: root.parent.menu_button_title
        font_size: dp(25)
        font_name: 'assets/fonts/Eurostile.ttf'
        pos_hint: { "center_x": .5, "center_y": .3 }
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85